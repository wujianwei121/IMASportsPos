        <attr name="conter_res" format="reference" />
        <attr name="center_txt_color" format="color" />
        <attr name="right_txt" format="string" />
        <attr name="right_txt_color" format="color" />
        <attr name="extra_txt" format="string" />
        <attr name="left_txt" format="string" />
        <attr name="right_txt_bg" format="reference" />
        <attr name="title_bg" format="reference" />
    </declare-styleable>
    <declare-styleable name="AutoTitle">
        <attr name="titleLeftpadding" format="dimension|reference" />
        <attr name="titleRightpadding" format="dimension|reference" />

        <attr name="titleLeftText" format="string|reference" />
        <attr name="titleLeftTextSize" format="dimension|reference" />

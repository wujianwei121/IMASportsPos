<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey"
    android:orientation="vertical"
    android:padding="@dimen/space_10">

    <EditText
        android:id="@+id/et_price"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_60"
        android:layout_marginTop="@dimen/space_50"
        android:background="@drawable/round_10_white_bg_grey_stroke"
        android:gravity="center"
        android:hint="请输入您充值的金额"
        android:inputType="number"
        android:padding="@dimen/space_15"
        android:textSize="@dimen/font_size_18" />

    <TextView
        android:id="@+id/tv_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="@dimen/space_10"
        android:text="当前账户余额为: 3000元"
        android:textSize="@dimen/font_size_18" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_100"
        android:gravity="center"
        android:text="温馨提示:"
        android:textColor="@color/gary_82"
        android:textSize="@dimen/font_size_18" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/space_5"
        android:paddingTop="@dimen/space_10"
        android:text="@string/reminder"
        android:textColor="@color/gary_82"
        android:textSize="@dimen/font_size_16" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey"
    android:orientation="vertical">

    <com.example.framwork.widget.scrolllayout.ScrollableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/layout_member_detail_header" />

        <com.flyco.tablayout.SegmentTabLayout
            android:id="@+id/tab_member"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="@dimen/space_10"
            app:tl_bar_color="@color/white"
            app:tl_divider_color="@color/gray_d8"
            app:tl_indicator_color="@color/red"
            app:tl_indicator_corner_radius="8dp"
            app:tl_tab_padding="20dp"
            app:tl_textSelectColor="@color/white"
            app:tl_textUnselectColor="@color/gray_9b" />

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" />
    </com.example.framwork.widget.scrolllayout.ScrollableLayout>
</LinearLayout>
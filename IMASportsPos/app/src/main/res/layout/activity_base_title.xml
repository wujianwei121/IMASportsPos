<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.framwork.widget.customtoolbar.CommonTitle
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_item_height"
        app:center_txt_color="@color/white"
        app:left_res="@drawable/back"
        app:right_txt_color="@color/white"
        app:title_bg="@drawable/shape_title_bg" />

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />

</LinearLayout>
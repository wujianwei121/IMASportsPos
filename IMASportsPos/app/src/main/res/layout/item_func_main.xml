<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_e1"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0.5dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="21dp"
            android:layout_marginTop="41dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/func_ico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_hycx" />

            <TextView
                android:id="@+id/func_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/func_ico"
                android:layout_marginTop="@dimen/margin_view_size_l"
                android:singleLine="false"
                android:textColor="@color/brown"
                android:textSize="@dimen/custom_text_size_n"
                tools:text="会员查询" />
        </LinearLayout>

        <ImageView
            android:id="@+id/func_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="@dimen/padding_size_10dp"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>